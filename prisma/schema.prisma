generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id           String   @id @default(uuid())
  name         String
  registerDate DateTime @default(now())
  
  @@map("patients")
}

